<%- include('header') %>

<h3 style="text-align: center;">Welcome to the application</h3>

<div class="container container-shrink-small">
    
    <form action="/tracker-app" method="post">
        <div class="mb-3">
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputTitle"
                placeholder="Enter the Title *" name="_TITLE">
    
            <textarea autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputDescr"
                placeholder="Enter the Description *" name="_DESCRIPTION"></textarea>
    
            <table class="table table-no-border">
                <tr>
                    <td>
                        <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputUser"
                            placeholder="Enter the User *" name="_ASSIGN_TO" list="user">
                        <datalist id="user">
                            <% users.forEach((users)=>{%>
                                <option id=<%=users.NAME %>><%= users.NAME %>
                                </option>
                                <%})%>
                        </datalist>
                    </td>
                    <td>
                        <select autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputPriority"
                            placeholder="Enter the ticket category *" name="_PRIORITY">
                            <option value="-" disabled selected>--Select Priority--</option>
                            <option value="1">Critical</option>
                            <option value="2">High</option>
                            <option value="3">Medium</option>
                            <option value="4">Low</option>
                        </select>
                    </td>
                    <td>
                        <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputTag"
                            placeholder="Enter a Tag" name="_TAG">
                    </td>
                </tr>
            </table>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">CREATE TASK</button>
    </form>
    
</div>

<div class="container container-shrink">
    <HR>
    <% result.forEach((result)=>{%>

        <div class="card">
            <h5 class="card-header"><%= result.TITLE %></h5>
            <div class="card-body">
              <h5 class="card-title"><%= result.DESCRIPTION %></h5>
              <p><label class="card-text">Assigned To : </label><%= result.ASSIGNED_TO %></p>
              <p><label class="card-text">Status : </label><%= result.STATUS %></p>
              <p><label class="card-text">Priority : </label><%= result.PRIORITY %></p>
              <p><label class="card-text">Created On : </label><%= result.CREATED_ON %></p>
              <p><label class="card-text">Tags : </label><%= result.TAGS %></p>
              <br>
              <a href="#" class="btn btn-primary">VIEW</a>
            </div>
          </div>
          <br>

    <%})%>
</div>
    
    


<%- include('footer') %>