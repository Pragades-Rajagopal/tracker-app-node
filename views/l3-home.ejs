<%- include('header')%>

<div class="container" style="max-width: 1350px !important;">
    <h4 style="text-align: center;">L3 tracker (<%= results.length %> open issues)</h4>
    <a href="/prov_ops-tracker-app/L3_tracker/closed" class="btn btn-danger btn-sm">View closed L3</a>
    <a href="/prov_ops-tracker-app/L3_tracker/add" class="btn btn-outline-dark btn-sm" style="float: right; margin-bottom: 10px;">+ Add new L3</a>
    
    <table class="table" style="border-color: hsla(0, 0%, 0%, 25%) !important;">
        <thead>
            <tr>
                <th>L3 ISSUE</th>
                <th>RAISED BY</th>
                <th>PRIORITY</th>
                <th>CREATED ON</th>
                <th>STATUS</th>
            </tr>
        </thead>
        <tbody>
            <% for (const result of results) { %> 
            <tr>
                <td><a class="l3-title" href="/prov_ops-tracker-app/L3_tracker/view/<%= result.ID %>" target="_blank" rel="noreferrer noopener"><%= result.ISSUE_NAME %></a></td>
                <td><%= result.RAISED_BY %></td>
                <td><%= result.PRIO %></td>
                <td><%= result.CREATED_ON %></td>
                <td><%= result.STATUS %></td>
            </tr>
            <% } %>
        </tbody>
    </table>
    
</div>

<%- include('footer')%>